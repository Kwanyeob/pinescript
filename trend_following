//@version=5
strategy("trend_following", overlay=true, initial_capital = 1000,default_qty_type = strategy.percent_of_equity, default_qty_value = 100)

highest20 = ta.highest(high[1], 20)
lowest20 = ta.lowest(low[1], 20)
ph = plot(highest20)
pl = plot(lowest20)

fill(ph, pl , color = color.orange)

is_long = high > highest20 
is_closed = low < lowest20 

if is_long 
    strategy.entry("long", strategy.long)
if is_closed
    strategy.close("long")
